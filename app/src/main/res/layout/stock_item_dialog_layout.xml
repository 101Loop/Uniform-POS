<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock Details"
        android:textColor="@color/white1"
        android:background="@color/denim"
        android:padding="8dp"
        android:textSize="17dp"/>

    <LinearLayout
        android:id="@+id/fullNameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/stroke_around_rect"
        android:padding="2dp"
        android:weightSum="3" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/transAmountEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto_medium"
            android:gravity="start"
            android:hint="Add Barcode"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:textColor="@color/black1"
            android:theme="@style/EditTextTheme" />

        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Search"
            android:textColor="@color/white1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@color/denim">

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="17sp"
            android:textColor="@color/white1"
            android:text="Items" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17sp"
            android:textColor="@color/white1"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="Items No." />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white1"
            android:text="Items Scanned"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:textColor="@color/white1"
            android:textSize="17sp"
            android:text="Move to Shelf"/>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/stock_list_item_layout"/>
</LinearLayout>