<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/itemImageView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/model2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blue And Yellow Shirt"
                    android:textColor="@color/black1"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/itemSerialView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USAP-2123"
                    android:textColor="@color/black3"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemQuantityPriceView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 x 1"
                    android:textColor="@color/black1"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/itemDiscountView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disc 10%"
                    android:textColor="@color/black3"
                    android:textSize="16sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/itemTotalPriceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹100"
                android:gravity="end"
                android:layout_weight="2"
                android:textColor="@color/black1"
                android:textSize="16sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>